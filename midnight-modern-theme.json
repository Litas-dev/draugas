{
  "name": "Midnight Modern Theme",
  "version": "1.0.0",
  "colors": {
    "background": "#121212",
    "text": "#FFFFFF",
    "primary": "#783BF9",
    "secondary": "#252525",
    "accent": "#3F3F3F",
    "error": "#FF5252",
    "success": "#4CAF50",
    "warning": "#FFC107",
    "info": "#2196F3"
  },
  "typography": {
    "fontFamily": "Inter, sans-serif",
    "headings": {
      "fontWeight": 700,
      "lineHeight": 1.2
    },
    "body": {
      "fontWeight": 400,
      "lineHeight": 1.5,
      "fontSize": "1rem"
    }
  },
  "spacing": {
    "base": 8,
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  "borderRadius": {
    "sm": 4,
    "md": 8,
    "lg": 16,
    "pill": 9999
  },
  "components": {
    "button": {
      "primary": {
        "background": "#783BF9",
        "text": "#FFFFFF",
        "hoverBackground": "#8F5CFF",
        "borderRadius": 8
      },
      "secondary": {
        "background": "transparent",
        "text": "#FFFFFF",
        "border": "1px solid #3F3F3F",
        "hoverBackground": "#252525",
        "borderRadius": 8
      }
    },
    "input": {
      "background": "#252525",
      "text": "#FFFFFF",
      "border": "1px solid #3F3F3F",
      "focusBorder": "#783BF9",
      "borderRadius": 8,
      "padding": "12px 16px"
    },
    "card": {
      "background": "#252525",
      "text": "#FFFFFF",
      "borderRadius": 12,
      "padding": 24
    }
  }
}